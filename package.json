{
  "name": "@dojo/cli-create-theme",
  "version": "3.0.0-pre",
  "description": "Command to scaffold out a new theme",
  "engines": {
    "npm": ">=3.0.0",
    "node": ">=6"
  },
  "private": true,
  "homepage": "http://dojo.io",
  "bugs": {
    "url": "https://github.com/dojo/cli-create-theme/issues"
  },
  "license": "BSD-3-Clause",
  "main": "main.js",
  "files": [
    "dist",
    "src",
    "typings.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dojo/cli-create-theme.git"
  },
  "scripts": {
    "build:static:dev": "cpx \"src/templates/**/*\" dist/dev/src/templates",
    "build:static:release": "cpx \"src/templates/**/*\" dist/release/templates",
    "build:cjs": "tsc",
    "build": "npm-run-all -p build:** -s package",
    "clean": "rimraf dist coverage",
    "intern": "intern",
    "lint:tslint": "tslint -p .",
    "lint:prettier": "prettier -l \"{src,tests}/**/*.{ts,tsx}\"",
    "lint": "run-p lint:*",
    "package": "dojo-package",
    "precommit": "lint-staged",
    "prettier": "prettier --write \"{src,tests}/**/*.{ts,tsx}\"",
    "test": "run-s lint build intern",
    "uploadCoverage": "codecov --file=coverage/coverage.json",
    "watch:ts": "dojo-tsc-watcher -p tsconfig.json -- dojo-package",
    "watch": "run-p watch:ts \"build:static:** -- --watch\""
  },
  "devDependencies": {
    "@dojo/cli": "^3.0.0-alpha.1",
    "@dojo/loader": "^2.0.0",
    "@dojo/scripts": "^3.0.0-alpha.6",
    "@types/camelcase": "^4.1.0",
    "@types/fs-extra": "^4.0.5",
    "@types/globby": "^6.1.0",
    "@types/inquirer": "0.0.35",
    "@types/mockery": "^1.4.29",
    "@types/node": "~9.6.5",
    "@types/sinon": "~4.3.3",
    "codecov": "~3.0.4",
    "cpx": "~1.5.0",
    "husky": "0.14.3",
    "lint-staged": "6.0.0",
    "mockery": "^2.1.0",
    "npm-run-all": "~4.1.3",
    "sinon": "~4.5.0"
  },
  "dependencies": {
    "camelcase": "^4.1.0",
    "chalk": "2.3.0",
    "fs-extra": "^4.0.2",
    "globby": "^7.1.1",
    "inquirer": "^4.0.1",
    "pkg-dir": "^2.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "parser": "typescript",
    "printWidth": 120,
    "arrowParens": "always"
  }
}
